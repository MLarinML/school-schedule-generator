# Database
DATABASE_URL="file:./dev.db"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-here"
PASSWORD_PEPPER="your-super-secret-password-pepper-here"
SESSION_SECRET="your-super-secret-session-key-here"

# Email (SMTP)
# Для Gmail: включите 2FA и создайте пароль приложения
# Инструкции: https://support.google.com/accounts/answer/185833
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-16-character-app-password"
SMTP_FROM="noreply@raspisanie.ru"

# Security - Увеличенные лимиты для удобства пользователей
RATE_LIMIT_WINDOW=3600000
RATE_LIMIT_MAX_ATTEMPTS=50
PASSWORD_MIN_LENGTH=10
SESSION_EXPIRY=86400000
EMAIL_VERIFICATION_EXPIRY=3600000
PASSWORD_RESET_EXPIRY=3600000

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Генератор школьных расписаний"

